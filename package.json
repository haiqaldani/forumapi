{
  "name": "forum-api",
  "version": "1.0.0",
  "description": "Forum API with Clean Architecture",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:dev": "nodemon src/app.js",
    "test": "cross-env NODE_ENV=test jest --setupFiles dotenv/config -i",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll --coverage --setupFiles dotenv/config -i",
    "migrate": "node-pg-migrate",
    "migrate:test": "node-pg-migrate -f config/database/test.json"
  },
  "keywords": [
    "forum",
    "api",
    "clean-architecture"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "@hapi/jwt": "^3.2.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "instances-container": "^2.0.6",
    "nanoid": "^3.3.6",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^3.0.1"
  }
} 